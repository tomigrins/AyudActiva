@{
    ViewData["Title"] = "Financiar";
}

    <section class="Financiar">
        <h2>Ayuda a ayudar</h2>
      
        <p class="descripcion">
          Cada aporte multiplica el impacto. Tu donación permite que más campañas sigan transformando realidades.
          Elegí el monto y el destino, y <strong>sé parte del cambio.</strong>
        </p>
      
        <div class="contenedor-form">
          <div class="col-izquierda">
            <label for="monto" class="label-principal">Monto a donar</label>
            <input type="number" id="monto" placeholder="Monto">
      
            <div class="frecuencia">
              <label><input type="radio" name="frecuencia" checked> Por única vez</label>
              <label><input type="radio" name="frecuencia"> Mensualmente</label>
            </div>
      
            <select id="destino">
              <option value="">Destino</option>
              <option value="educacion">Educación</option>
              <option value="salud">Salud</option>
              <option value="comunidad">Comunidad</option>
            </select>
          </div>
      
          <div class="col-derecha"> 
            <p class="metodo-titulo">Método de pago</p>
            <div class="metodos">
              <label>
                <input type="radio" name="frecuencia">
                <img src="https://upload.wikimedia.org/wikipedia/commons/0/04/Mastercard-logo.png" alt="Mastercard">
              </label>
              <label>
                <input type="radio" name="frecuencia">
                <img src="https://blogger.googleusercontent.com/img/b/R29vZ2xl/AVvXsEg-XzSWZdtf3Lgk80cOwX_lyUAiAGOkQer4gLjKSlGD1_Lso4yPSiWbUTVw-ssFpCkB2I-e4_gAGp3PFTz6uKHDMX3hD8QcVDWegy5jXJ4oOpTmXOzCTVoOEj5H0V_mKgxE9y9aAj5deqw/s640/logo+santander+nuevo2.jpg" alt="Santander">
              </label>
              <label>
                <input type="radio" name="frecuencia">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ-ns1YY_la2zpWjImynS670i2Tktv9zPw4rQ&s" alt="Transferencia">
              </label>
              <label>
                <input type="radio" name="frecuencia">
                <img src="https://tuquejasuma.com/media/images/entity225485_square.jpeg" alt="Modo">
              </label>
            </div>
          </div>
          
          
        </div>
      
        <button class="btn-confirmar">Confirmar mi aporte</button>
      </section>
      <!-- Dsp hacer que sean selecionables los metodos de pago -->
      </html>

</html>