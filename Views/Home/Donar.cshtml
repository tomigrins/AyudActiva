@{
    ViewData["Title"] = "Donar";
}
<section class="Donar">
  <div id="map" style="width:100%; height:500px; border-radius:10px;"></div>

  <div class="donar-panel">
      <h2>¿Qué quiero <strong>donar</strong>?</h2>
      <ul>
        <li><input type="radio" name="donar" id="alimentos"><label for="alimentos">Alimentos</label></li>
        <li><input type="radio" name="donar" id="ropa"><label for="ropa">Ropa</label></li>
        <li><input type="radio" name="donar" id="bebes"><label for="bebes">Artículos para bebés</label></li>
        <li><input type="radio" name="donar" id="muebles"><label for="muebles">Muebles</label></li>
        <li><input type="radio" name="donar" id="tecno"><label for="tecno">Tecnología</label></li>
        <li><input type="radio" name="donar" id="utiles"><label for="utiles">Útiles escolares</label></li>
        <li><input type="radio" name="donar" id="cocina"><label for="cocina">Cocina</label></li>
        <li><input type="radio" name="donar" id="libros"><label for="libros">Libros</label></li>
      </ul>
  </div>
</section>
<script>
  let map;

  // Ejemplo de coordenadas (luego podés traerlas desde tu backend)
  const ubicaciones = [
    { lat: -34.6089, lng: -58.4311, titulo: "ORT Almagro" },
    { lat: -34.6037, lng: -58.3816, titulo: "Obelisco" },
    { lat: -34.6158, lng: -58.4333, titulo: "Parque Centenario" }
  ];

  function initMap() {
    // Crea el mapa centrado en Buenos Aires
    map = new google.maps.Map(document.getElementById("map"), {
      center: { lat: -34.6089, lng: -58.4311 },
      zoom: 13,
    });

    // Crea los marcadores (con flecha personalizada)
    ubicaciones.forEach(ubi => {
      new google.maps.Marker({
        position: { lat: ubi.lat, lng: ubi.lng },
        map,
        title: ubi.titulo,
        icon: {
          path: google.maps.SymbolPath.FORWARD_CLOSED_ARROW,
          scale: 5,
          strokeColor: "#ff0000",
          rotation: 0 // Podés cambiar la orientación si querés
        }
      });
    });
  }
</script>

<!-- Cargá el script oficial de Google Maps con tu API key -->
<script async
  src="https://maps.googleapis.com/maps/api/js?key=TU_API_KEY_AQUI&callback=initMap">
</script>
<script>
  const ubicaciones = @Html.Raw(ViewBag.Ubicaciones);
</script>
