<body>
    <section class =  "registroUser">
        <form action='@Url.Action("RegistroGuardarUser","Home")' method="post">
                    <h2>Nombre:</h2> 
                    <p><input type="text" name="nombre" required></p>
                    <h2>Apellido:</h2> 
                    <p><input type="text" name="apellido" required></p>
                    <h2>Username:</h2> 
                    <p><input type="text" name="username" required></p>
                    <h2>Email:</h2> 
                    <p><input type="email" name="email" required></p>
                    <h2>Fecha de nacimiento:</h2> 
                    <p><input type="date" name="fechaNacimiento" required></p>
                    <h2>Contraseña:</h2> 
                    <p><input type="password" name="contrasena" required></p>
                    <h2>Repetir contraseña:</h2> 
                    <p><input type="password" name="confirmarContrasena" required></p>
                    <p><input type="submit" value="Enviar"></p>
                                <h3>@ViewBag.mensajeError</h3>
                </form>
            </section>
</body>
</html>