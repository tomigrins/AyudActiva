
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NombreProyecto</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>
    <header>
        <div>
            <a href="index.cshtml"><img src="imagenes/logo.png" alt="LOGO"></a>
        </div>
        <nav>
            <ul>
                <li><a href="Donar.cshtml">Donar</a></li>
                <li><a href="Financiar.cshtml">Fianciar</a></li>
                <li><a href="Voluntariado.cshtml">Voluntariado</a></li>
                <li><a href="suscripcion.cshtml">Nuestra Historia</a></li>
                <li><a href="merch.html">MERCH</a></li>
            </ul>
        </nav>
        <div>
             @{
                string user = Context.Session.GetString("Usuario");
                bool isAuthenticated = !string.IsNullOrEmpty(user);
                }

            @if (isAuthenticated)
            {
                Usuario usuario = Objetos.StringToObject<Usuario>(user);
                 {<h2>¡Bienvenido, @usuario.nombre!</h2>}
            }
            else{
                <h2>¡Bienvenido!</h2>
            }

        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>

</html>
